@model CMS_Solution.WebRuby.ViewModel.FooterViewModel

<div class="modal fade" id="menu" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><a href="/"><img src="/Content/image/lgo-mobile.jpg"></a></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3>MAIN MENU</h3>
                <ul>
                    <li><a href="/">Trang chủ</a></li>
                    @if (Model != null)
                    {
                        var _lstMenu = (Model != null && Model.menuMap != null && Model.menuMap.Count() > 0) ? Model.menuMap : new List<Business.Entities.Domain.MenuMap>();
                        foreach (var item in _lstMenu)
                        {
                            <li>
                                <a href="@item.Url">@item.CategoryName</a>
                            </li>
                        }
                    }
                </ul>
                <section class="box-menu">
                    <a href="dang-ky">Đăng ký</a>
                    <a href="dang-nhap">Đăng nhập</a>
                </section>
            </div>
        </div>
    </div>
</div>
